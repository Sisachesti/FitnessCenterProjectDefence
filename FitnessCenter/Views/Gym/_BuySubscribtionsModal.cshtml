﻿
@model FitnessCenter.Web.ViewModels.GymClass.AvailableSubscribtionsViewModel

<div class="modal fade" id="buySubscribtionModal" tabindex="-1" role="dialog" aria-labelledby="buySubscribtionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="buySubscribtionModalLabel">Buy Subscribtions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="buySubscribtionForm" asp-controller="Subscribtion" asp-action="BuySubscribtions">
                    <input type="hidden" asp-for="GymId" />
                    <input type="hidden" asp-for="ClassId" />
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Number of Subscribtions</label>
                        <input type="number" asp-for="Quantity" class="form-control" min="1" required />
                    </div>
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Available subscribtions</label>
                        <input type="number" asp-for="AvailableSubscribtions" class="form-control" disabled="disabled" />
                    </div>
                    <div id="errorMessage" class="text-danger d-none"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" id="buySubscribtionButton" class="btn btn-primary">Buy Subscribtions</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>