﻿@{
    ViewBag.Title = "Welcome to Fitness Center Web App!";
}

<!-- Title Section -->
<div class="container text-center my-5">
    <h1 class="display-4">@ViewBag.Title</h1>
    <p class="lead">Visit the best fitting workout classes for you and their locations!</p>
    <hr class="my-4">
</div>

<!-- Welcome Section -->
<div class="bg-dark text-white text-center py-5">
    <div class="container">
        <h2 class="display-5 fw-bold">The Paradise of Gyms</h2>
        <p class="mb-4">Find your favorite gyms, explore workout classes, and keep track of what you love.</p>
        <a asp-controller="Gym" asp-action="Index" class="btn btn-primary btn-lg mx-2">Explore Gyms</a>
        <a asp-controller="Class" asp-action="Index" class="btn btn-secondary btn-lg mx-2">Browse Classes</a>
    </div>
</div>

<!-- Featured Section -->
<div class="container my-5">
    <h3 class="text-center mb-4">Popular Choices</h3>
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card p-4 text-center">
                <h5 class="card-title">Top Gym of the Month</h5>
                <p class="card-text">Experience the best workout classes in our top-rated gym.</p>
                <a asp-controller="Gym" asp-action="Index" class="btn btn-primary">Explore Gyms</a>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card p-4 text-center">
                <h5 class="card-title">Best class suggested</h5>
                <p class="card-text">Catch the latest workout that   everyone admires.</p>
                <a asp-controller="Class" asp-action="Index" class="btn btn-primary">Browse Classes</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="container text-center">
        <p>
            Follow us on:
            <a href="#" class="text-muted mx-1">Facebook</a> |
            <a href="#" class="text-muted mx-1">Twitter</a> |
            <a href="#" class="text-muted mx-1">Instagram</a>
        </p>
    </div>
</div>